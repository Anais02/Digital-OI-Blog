    <!-- header -->
    {% block header %}
    <div class="container">
        <div class="row">
            <header>
                <div >
                    <nav class="navbar-fixed">
                        <div class="container">
                            <div class="nav-wrapper">
                                <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>

                                <ul class="hide-on-med-and-down center-align navCenter">
                                    <li><a href="/" >ACCUEIL</a></li>
                                    <li><a href="#" class="active">ARTICLES</a></li>
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li><a class="dropdown-button" href="#!" data-activates="dropdown1">ADMINISTRATION</a></li>
                                    <ul id="dropdown1" class="dropdown-content">
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="/article">Mes articles</a></li>
                                        {% endif %}
                                        {% if app.user.imageName == null %}
                                        <li><a href="/profile"><i class="fa fa-user" aria-hidden="true"></i> profil</a></li>
                                        {% else %}
                                        <li><a href="/profile"><img src="img/users/{{ app.user.imageName }}"> {{ app.user.username }}</a></li>
                                        {% endif %}
                                        {% if is_granted('ROLE_ADMIN') %}
                                        <li><a href="/commentaire">Commentaires</a></li>
                                        {% endif %}
                                        <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                                    </ul>

                                    {% else %}
                                    <li><a href="/login">CONNEXION</a></li>
                                    {% endif %}
                                </ul>

                                <ul class="side-nav" id="mobile-demo">
                                    <li><a href="/">Accueil</a></li>
                                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                    <li><a href="/profile"><i class="fa fa-user" aria-hidden="true"></i> <img src="img/users/{{ app.user.imageName }}"> {{ app.user.username }}</a></li>
                                    <li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> Déconnexion</a></li>
                                    {% else %}
                                    <li><a href="/login">Connexion</a></li>
                                    <li><a href="/register">S'inscrire</a></li>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </nav>
                </div>
            </header>
            <!-- Titre -->

            <div class="row">
                <div class="logo col s12 center-align">
                    <a href="#!" class="brand-logo center"><img src="{{asset('img/logo_Digital.png')}}" alt=""></a>
                </div>
                <hr>
                <h5 class=" center-align"> En route vers la culture du numérique  de l'Océan Indien</h5>
            </div>
        </div>
    </div>
    {% endblock header %}
    <!--fin  Titre -->
    <!-- fin header -->

