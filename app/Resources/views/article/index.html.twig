{% extends 'base.html.twig' %}

{% block body %}
<section id="mes-articles">

  <div class="container">

    <h1 class="center-align">Mes articles</h1>

<a href="/article">TOUT</a>
<a href="/publique">Publique</a>
<a href="/brouillon">Brouillon</a>

    <table class="highlight bordered z-depth-2">
      <thead>
        <tr>
            <th>

            </th>
          <th class="center-align">Articles</th>

          <th>Publi√©</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for article in articles %}
        <tr>
          <td>
              <img  class="image"src="{{ asset('img/articles/')~  article.imageName }}" >
          </td>
          <td>   <h6 >
                         {{ article.titre | truncate(60, true, '...')  }}
                     </h6 >
          </td>



          {% if article.disponibilite == 'Publique' %}
          <td>
            <div id="checkboxPublique" class="switch">
              <label>
                <input disabled type="checkbox">
                <span class="lever"></span>
              </label>
            </div>
          </td>

          {% else %}
          <td>
            <div class="switch">
              <label>
                <input disabled type="checkbox">
                <span class="lever"></span>
              </label>
            </div>
          </td>

          {% endif %}

          <!--
          <td>{{ article.disponibilite }}</td> -->

          <td><a href="{{ path('article_edit', { 'id': article.id }) }}"><i class="material-icons">mode_edit</i></a></td>
          <td>

          </td>
        </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="row">
      <div class="col s12 center-align">
        <a href="{{ path('article_new') }}" class="btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></a>
        <p>
          Nouvel article
        </p>

      </div>
    </div>

  </div>
</section>

{% endblock %}
